<% layout("/layouts/boilerplate") %>`
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Listing Card -->
      <div class="card listing-card shadow-sm mb-4">
        <img
          src="<%= listing.image?.url %>"
          class="card-img-top"
          alt="listing-image"
        />
        <div class="card-body text-center">
          <h4 class="card-title mb-2"><%= listing.title %></h4>
          <p class="card-text">
          <p class="card-text"><i>Owned By <%=listing.owner.username%> </i></p>

            <%= listing.description %><br />
            <strong>‚Çπ <%= listing.price.toLocaleString("en-IN") %></strong
            ><br />
            <%= listing.location %>, <%= listing.country %>
          </p>
          <br>
          <%if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
          <div class="d-flex justify-content-center gap-3">
            <a
              href="/listings/<%= listing._id %>/edit"
              class="btn btn-dark btn-sm"
              >Edit</a
            >
            <form
              method="POST"
              action="/listings/<%= listing._id %>?_method=DELETE"
              class="d-inline"
            >
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>   
          </div>
          <%}%>
        </div>
      </div>

      <!-- Review Form -->
      <div class="card review-card mx-auto my-4">
        <div class="card-body">
          <h5 class="card-title mb-4 text-center text-secondary fw-bold">
            üí¨ Leave a Review
          </h5>
          <form
            action="/listings/<%= listing.id %>/reviews"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <div class="mb-4">
              <label for="rating" class="form-label fw-semibold">Rating</label>
              <input
                type="range"
                class="form-range rating-slider"
                min="1"
                max="5"
                id="rating"
                name="review[rating]"
                required
              />
              <div class="d-flex justify-content-between small text-muted px-1">
                <span>1 ‚≠ê</span>
                <span>5 ‚≠ê</span>
              </div>
              <div class="invalid-feedback">
                Please select a rating between 1 and 5
              </div>
            </div>

            <div class="mb-4">
              <label for="comment" class="form-label fw-semibold"
                >Comment</label
              >
              <textarea
                name="review[comment]"
                id="comment"
                cols="30"
                rows="4"
                class="form-control shadow-sm gentle-textarea"
                placeholder="Share your experience..."
                required
              ></textarea>
              <div class="invalid-feedback">
                Please add a valid review comment.
              </div>
            </div>

            <button class="btn btn-dark w-100 gentle-btn" type="submit">
              Submit Review
            </button>
          </form>
        </div>
      </div>
    </div>
    <hr />
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for (review of listing.reviews ) {%>
      <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
          <h5 class="card-title">Jane Doe</h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%>Stars</p>
        </div>
        <form
          class="mb-3"
          method="POST"
          action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <%}%>
    </div>
  </div>
</div>
