<% layout("/layouts/boilerplate") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form
        method="POST"
        action="/listings"
        enctype="multipart/form-data"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="listing[title]"
            placeholder="Enter Title"
            required
          />
          <div class="valid-feedback">Title looks Good</div>
          <div class="invalid-feedback">Title Should be Correct</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="des">Description</label>
          <textarea
            class="form-control"
            id="des"
            name="listing[description]"
            placeholder="Enter Description"
            required
          ></textarea>
          <div class="valid-feedback">Description looks Good</div>
          <div class="invalid-feedback">Please enter short description</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="image">Upload Listing Image</label>
          <input
            class="form-control"
            type="file"
            id="image"
            name="listing[image]"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="num">Price</label>
          <input
            class="form-control"
            type="number"
            id="num"
            name="listing[price]"
            placeholder="Enter Price"
            required
          />
          <div class="valid-feedback">Price looks Good</div>
          <div class="invalid-feedback">Price Should be valid</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-6">
            <label class="form-label" for="loc">Location</label>
            <input
              class="form-control"
              type="text"
              id="loc"
              name="listing[location]"
              placeholder="Enter Location"
              required
            />
            <div class="valid-feedback">Location looks Good</div>
            <div class="invalid-feedback">Title Should be Correct</div>
          </div>

          <div class="mb-3 col-md-6">
            <label class="form-label" for="con">Country</label>
            <input
              class="form-control"
              type="text"
              id="con"
              name="listing[country]"
              placeholder="Enter Country"
              required
            />
            <div class="valid-feedback">Country looks Good</div>
            <div class="invalid-feedback">Country Should be Correct</div>
          </div>
        </div>

        <button type="submit" class="btn add-btn btn-primary">Add</button>
      </form>
    </div>
  </div>
</body>
